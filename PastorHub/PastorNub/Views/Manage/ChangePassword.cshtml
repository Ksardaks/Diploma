@model PastorNub.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Зміна паролю";
}


<div class="container">
    <div class="jumbotron row mt-5 ChangePersonalInfoStyle">
        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal mr-auto ml-auto col-12 text-center", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h2>@ViewBag.Title.</h2>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control col-4 mr-auto ml-auto" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control col-4 mr-auto ml-auto" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-4 mr-auto ml-auto" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="Змінити пароль" class="btn btn-outline-success col-4" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-12">
                    <a href="~/Manage/Index" class="btn btn-outline-success col-4">Назад</a>
                </div>
            </div>

        }
    </div>
</div>

       
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
