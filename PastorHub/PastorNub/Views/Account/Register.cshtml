@model PastorNub.Models.RegisterViewModel
@{
    ViewBag.Title = "Реєстрація";
}

<div class="container">
    <div class="jumbotron row mt-5 RegisterStyle">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal mr-auto ml-auto col-12 text-center", role = "form", novalidate = "", autocomplete = "off" }))
        {
            @Html.AntiForgeryToken()
            <h2>@ViewBag.Title.</h2>
            <h4>Створення нового облікового запису</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Login, new { @class = "col-md-12 control-label" })
                <div class="col-12">
                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control col-4 mr-auto ml-auto", @readonly = "", onfocus= "this.removeAttribute('readonly')" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-12 control-label" })
                <div class="col-12">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-4 mr-auto ml-auto", type = "email", @readonly = "", onfocus = "this.removeAttribute('readonly')" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control col-4 mr-auto ml-auto", type = "password", @readonly = "", onfocus = "this.removeAttribute('readonly')" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-4 mr-auto ml-auto", @readonly = "", onfocus = "this.removeAttribute('readonly')" })
                </div>
            </div>
            <div class="form-group mb-5">
                @Html.LabelFor(m => m.AccountType, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    <select name="AccountType" class="form-control col-4 mr-auto ml-auto">
                        <option value="User">Звичайний користувач</option>
                        <option value="Pastor">Пастор</option>
                    </select>
                </div>
            </div>

            <div class="form-group mt-5">
                <div class="col-md-12">
                    <input type="submit" class="btn col-4 btn-outline-success" value="Зареєструватися   " />
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
