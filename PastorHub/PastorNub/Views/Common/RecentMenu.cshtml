@model List<PastorNub.Models.Post>
<h4 class="mt-5">Недавні публікації</h4>
<div class="col-12 row ml-auto p-0 mr-auto" style="height: 280px; overflow-x: hidden;">
    @if(Model.Count == 0)
    {
        <div class="col-12">Недавніх публікацій немає</div>
    }
    @foreach (var i in Model)
    {
        <div class="p-0 m-0 col-12">
            <hr />
            <a href="~/Profile/Index/@i.Autor.Id" style="position: absolute; top: 0; width: 100%; height: 100%; left: 0;"></a>
            <a href="~/Profile/Index/@i.Autor.Id" style="z-index: 2; position: relative;" class="ml-2"><b>@i.Autor.UserName</b></a>
            <small class="ml-1">@i.Date.ToShortDateString()</small>
            <small class="ml-1" style="color: darkgray;">@i.Confession.ConfessionName</small>
            <p>@i.Title</p>
            <hr />
        </div>
    }
</div>
