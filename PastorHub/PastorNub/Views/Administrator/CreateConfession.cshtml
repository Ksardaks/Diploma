<div class="container col-12">
    <div class="row jumbotron col-9 offset-1 mt-5">
        @using (Html.BeginForm("CreateConfession", "Administrator", FormMethod.Post, new { @class = "form-horizontal col-12 text-center", role = "form", enctype = "multipart/form-data" }))
        {
            <hr />
            <div class="form-group mt-2">
                <label class="col-md-12 control-label">Назва</label>
                <div class="col-md-12">
                    <input type="text" name="Title" class="form-control col-6 mr-auto ml-auto" />
                </div>
            </div>
            <div class="form-group mt-5">
                <div class="col-md-12">
                    <input type="submit" value="Зберегти" class="btn btn-outline-success col-6" />
                </div>
            </div>
            <div class="form-group mt-2">
                <div class="col-md-12">
                    <a href="~/Channel/PostManager" class="btn btn-outline-primary col-6">Відмінити</a>
                </div>
            </div>
        }
    </div>
</div>

